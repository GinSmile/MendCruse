<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:gravity="center_horizontal"
	>
	
    <RelativeLayout 
        android:id="@+id/game_rel"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        >
    <!-- the top -->
    <LinearLayout 
        android:id="@+id/game_stat"
        android:layout_width="match_parent"
        android:layout_height="90px"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:background="#9f000000"
        android:layout_margin="10px"
        >
        
        <TextView 
            android:id="@+id/game_tolsco"
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="1"
            android:text="总分: 0"
            android:textColor="#fff"
            android:layout_margin="2px"
            />
        <TextView 
            android:id="@+id/game_ques"
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="1"
            android:text="问题:"
            android:textColor="#fff"
            android:layout_margin="2px"
            />
        <TextView 
            android:id="@+id/game_time"
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="1"
            android:text="时间:"
            android:textColor="#fff"
            android:layout_margin="2px"
            />
    </LinearLayout>   
    
    <!-- the bottom -->
    <TableLayout 
        android:id="@+id/game_option"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:layout_alignParentBottom="true"
        android:background="#fff"
        android:layout_margin="6px"
		android:stretchColumns="*"
        >
        <TableRow >
            <TextView 
                android:id="@+id/game_option0"
               
                android:layout_marginRight="3px"
                android:layout_marginBottom="3px"
                android:layout_marginLeft="6px"
                android:layout_marginTop="6px"
                android:gravity="center"
                />
            <TextView 
                android:id="@+id/game_option1"
              
                android:layout_marginLeft="3px"
                android:layout_marginBottom="3px"
                android:layout_marginTop="6px"
                android:layout_marginRight="6px"
                android:gravity="center"
                />
        </TableRow>
        <TableRow >
            <TextView 
                android:id="@+id/game_option2"
              
                android:layout_marginRight="3px"
                android:layout_marginTop="3px"
                android:layout_marginLeft="6px"
                android:layout_marginBottom="6px"
                android:gravity="center"
                />
            <TextView 
                android:id="@+id/game_option3"
               
                android:layout_marginLeft="3px"
                android:layout_marginTop="3px"
                android:layout_marginRight="6px"
                android:layout_marginBottom="6px"
                android:gravity="center"
                />
        </TableRow>
    </TableLayout>
    
    <!-- the center -->
    <TextView 
        android:id="@+id/game_cenques"
        android:layout_width="match_parent"
        android:layout_height="30px"
        android:layout_above="@id/game_option"
        android:background="#9f000000"
        android:layout_margin="10px"
        android:textColor="#fff"
        android:text="+++++这里是问题区+++++"
        android:gravity="center"
        />
    <ProgressBar 
        android:id="@+id/game_timebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10px"
        android:layout_above="@id/game_cenques"
        android:max="100"
        style="@android:style/Widget.ProgressBar.Horizontal"
        />
    </RelativeLayout>
</LinearLayout>