<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
  	xmlns:android="http://schemas.android.com/apk/res/android"
  	android:gravity="center_horizontal|center_vertical"
  	android:background="#fff"
  	>
  	<com.teamir.mendcurse.game.InvertedTextView
  	    android:id="@+id/hresult2_playagain"
  	    android:layout_width="fill_parent"
  	    android:layout_height="45dp"
  	    android:layout_margin="3dp"
  	    android:layout_alignParentTop="true"
  	    android:gravity="center"
  	    android:background="#9f000000"
  	    />
  	<TextView
  	    android:id="@+id/hresult1_playagain"
  	    android:layout_width="fill_parent"
  	    android:layout_height="45dp"
  	    android:layout_margin="3dp"
  	    android:layout_alignParentBottom="true"
  	    android:gravity="center"
  	    android:background="#9f000000"
  	    />
  	<RelativeLayout
	    android:layout_margin="10dp"
	    android:layout_width="match_parent"
	    android:layout_height="280dp"
	    android:layout_centerInParent="true"
	   
  	 >
  	 <!-- top -->
  	 <com.teamir.mendcurse.game.InvertedTextView
  	     android:id="@+id/hresult2_tolscore"
  	     android:layout_width="fill_parent"
  	     android:layout_height="25dp"
  	     android:layout_margin="3dp"
  	     android:layout_alignParentTop="true"
  	     android:gravity="center"
  	     android:background="#9f000000"
  	     />
  	 <com.teamir.mendcurse.game.InvertedTextView
  	     android:id="@+id/hresult2_incorr"
  	     android:layout_width="fill_parent"
  	     android:layout_height="25dp"
  	     android:layout_margin="3dp"
  	     android:layout_below="@id/hresult2_tolscore"
  	     android:gravity="center"
  	     android:background="#9f000000"
  	     />
  	 <com.teamir.mendcurse.game.InvertedTextView
  	     android:id="@+id/hresult2_corr"
  	     android:layout_width="fill_parent"
  	     android:layout_height="25dp"
  	     android:layout_margin="3dp"
  	     android:layout_below="@id/hresult2_incorr"
  	     android:gravity="center"
  	     android:background="#9f000000"
  	     />
  	 <com.teamir.mendcurse.game.InvertedTextView
  	     android:id="@+id/hresult2_tag"
  	     android:layout_width="fill_parent"
  	     android:layout_height="35dp"
  	     android:layout_margin="3dp"
  	     android:layout_below="@id/hresult2_corr"
  	     android:gravity="center"
  	     android:background="#9f000000"
  	     />
  	 
  	<!-- bottom -->
  	<TextView 
  	    android:id="@+id/hresult1_tolscore"
  	    android:layout_width="fill_parent"
  	    android:layout_height="25dp"
  	    android:layout_margin="3dp"
  	    android:layout_alignParentBottom="true"
  	    android:gravity="center"
  	    android:background="#9f000000"
  	    />
  	<TextView 
  	    android:id="@+id/hresult1_incorr"
  	    android:layout_width="fill_parent"
  	    android:layout_height="25dp"
  	    android:layout_margin="3dp"
  	    android:layout_above="@id/hresult1_tolscore"
  	    android:gravity="center"
  	    android:background="#9f000000"
  	    />
  	<TextView 
  	    android:id="@+id/hresult1_corr"
  	    android:layout_width="fill_parent"
  	    android:layout_height="25dp"
  	    android:layout_margin="3dp"
  	    android:layout_above="@id/hresult1_incorr"
  	    android:gravity="center"
  	    android:background="#9f000000"
  	    />
  	<TextView 
  	    android:id="@+id/hresult1_tag"
  	    android:layout_width="fill_parent"
  	    android:layout_height="35dp"
  	    android:layout_margin="3dp"
  	    android:layout_above="@id/hresult1_corr"
  	    android:gravity="center"
  	    android:background="#9f000000"
  	    />
  	</RelativeLayout>   
</RelativeLayout>